<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PuntuationActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNumberRound"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12"
        android:background="@color/colorPrimary"
        android:textColor="#9E9E9E"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text="PuntuaciÃ³n:"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".44"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/textViewNamePlayerOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:textColor="#9E9E9E"
                android:textSize="40dp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:paddingTop="10dp"/>
            <TextView
                android:id="@+id/textViewPuntuationPlayerOne"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:textSize="65dp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".44"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/textViewNamePlayerTwo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:textColor="#9E9E9E"
                android:textSize="40dp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:paddingTop="10dp"/>
            <TextView
                android:id="@+id/textViewPuntuationPlayerTwo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:textSize="60dp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonFinBatalla"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12"
            android:background="@color/colorAccent"
            android:text="Terminar Batalla"
            android:textAlignment="center"
            android:textColor="#FFF"/>



    </LinearLayout>

</LinearLayout>